	<build>
	    <plugins>
	        <plugin>
	            <groupId>org.springframework.boot</groupId>
	            <artifactId>spring-boot-maven-plugin</artifactId>
            	<version>${spring.boot.version}</version>
 				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
		        <configuration>
		        <mainClass>net.atpco.hack.journeytransformer.TransformerApp</mainClass>
  		            <excludeGroupIds>org.joda,org.projectlombok,com.ibm.mq,org.powermock,org.easymock,junit,com.ibm.db2,io.vertx,org.eclipse.jetty</excludeGroupIds>
		        </configuration>				
 	        </plugin>
 	        <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>zip-journey-engine</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptor>src/assembly/bin.xml</descriptor>
							<finalName>${project.name}</finalName>
							<attach>false</attach>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>  
</project>

